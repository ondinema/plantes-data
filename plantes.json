    <div class="muted">${l.auteur?('par '+escapeHtml(l.auteur)+' ¬∑ '):''}${(l.lang||'fr').toUpperCase()}${l.premium? ' ¬∑ <span class="tag">Plus</span>':''}${l.categorie==='recette' && (l.sucre===true||l.sucre===false)? ' ¬∑ '+(l.sucre?'sucr√©e':'sal√©e'):''}</div>
  `;
